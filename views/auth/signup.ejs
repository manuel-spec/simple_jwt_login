<%- include('partials/head') %>
    

    
    <div class="grid grid-cols-3 gap-5">
        <div class="flex w-64"></div>
        <div class="flex w-64">
            
            
            <form action="" method="post" class="flex flex-col border p-9 m-4">
                <%  errors.forEach(element => {%>
                    <div class="flex flex-col  w-full">
                        <p class=" border bg-red-400 text-center p-2 text-white"> <%= element["msg"] %></p>
                    </div>
                <% });%>
                <h1 class="text-4xl text-center mb-4">Signup</h1>
                <div class="">
                    <label for="">Email:</label>
                    <input type="text" placeholder="email" class="border py-2 px-9" name="email">
                </div>
                <div class="">
                    <label for="">Password</label>
                    <input type="password" placeholder="********" class="border py-2 px-9" name="password">
                </div>
                <div>
                    <button class="border p-2 mt-4 mb-4">signup</button>
                </div>
                
                <div>
                    <span>already registered ? </span>
                    <a href="/users/login">Login</a>
                </div>
            </form>

        </div>
        <div class="flex"></div>
    </div>
<%- include('partials/foot') %>